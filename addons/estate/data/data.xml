<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!--CREATE PROPERTIES-->
        <record id="property_id1" model="estate.property">
            <field name="name">Big Villa</field>
            <field name="state">new</field>
            <field name="description">A nice and big villa</field>
            <field name="postcode">12345</field>
            <field name="date_availability">2020-02-02</field>
            <field name="expected_price">1600000</field>
            <field name="selling_price"></field>
            <field name="bedrooms">6</field>
            <field name="living_area">100</field>
            <field name="facades">4</field>
            <field name="garage">True</field>
            <field name="garden">True</field>
            <field name="garden_area">15</field>
            <field name="garden_orientation">south</field>

            <!--LINK OFFER
            <field name="property_id" ref="offer_id1"/>
            <field name="property_id" ref="offer_id2"/>
            <field name="property_id" ref="offer_id3"/>-->
        </record>

        <record id="property_id2" model="estate.property">
            <field name="name">Trailer home</field>
            <field name="state">canceled</field>
            <field name="description">Home in trailer park</field>
            <field name="postcode">54321</field>
            <field name="date_availability">1970-01-01</field>
            <field name="expected_price">100000</field>
            <field name="selling_price">120000</field>
            <field name="bedrooms">1</field>
            <field name="living_area">10</field>
            <field name="facades">4</field>
            <field name="garage">False</field>
            <field name="garden"></field>
            <field name="garden_area"></field>
            <field name="garden_orientation"></field>

            <!--LINK OFFER
            <field name="property_id" ref=YET IT HAVEN'T OFFER(S)/>-->

            <!--CREATE OFFER FROM PROPERTY
            <field name="offer_ids" eval="[
            Command.create({
                'partner_id':'c1'
                'price':430000
                'validity':8
            }),
            Command.create({
                'partner_id':'c6'
                'price':500000
                'validity':10
            }),
            Command.link(ref('offer.xml_id')),
            ]"/>-->
        </record>

        <!--CREATE OFFERS-->
        <record id="offer_id1" model="estate.property.offer">
            <field name="partner_id" eval="datetime.today()">azure interior</field>
            <field name="property_id">big villa</field>
            <field name="price">10000</field>
            <field name="validity">14</field>
        </record>

        <record id="offer_id2" model="estate.property.offer">
            <field name="partner_id" eval="datetime.today()">azure interior</field>
            <field name="property_id">big villa</field>
            <field name="price">1500000</field>
            <field name="validity">14</field>
        </record>

        <record id="offer_id3" model="estate.property.offer">
            <field name="partner_id" eval="datetime.today()">deco addict</field>
            <field name="property_id">big villa</field>
            <field name="price">1500001</field>
            <field name="validity">14</field>
        </record>
    </data>

    <!--ADD CODDE TO DATA
    <function model="estate.property.offer" name="accepted">
        <value eval="[ref('offer_id1')]"/>
    </function>

    <function model="estate.property.offer" name="refused">
        <value eval="[ref('offer_id2')]"/>
    </function>-->

</odoo>