<odoo>

    <!--TAG TREE VIEW-->
    <record id="customer_service_tag_tree_view" model="ir.ui.view">
        <field name="name">customer.service.tag.tree</field>
        <field name="model">customer.service.tag</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!--ACTION TAG VIEW-->
    <record id="customer_service_tag_action" model="ir.actions.act_window">
        <field name="name">Tags</field>
        <field name="res_model">customer.service.tag</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
